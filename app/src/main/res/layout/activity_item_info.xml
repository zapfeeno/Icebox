<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemInfoActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteItemButton"
        android:layout_width="169dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"
        android:background="#555555"
        android:onClick="deleteItem"
        android:text="Remove Item from Icebox"
        android:textColor="#CCCCCC"
        app:layout_constraintBottom_toTopOf="@+id/goHomeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateExpireText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goHomeButton"
        android:layout_width="171dp"
        android:layout_height="0dp"
        android:layout_marginBottom="183dp"
        android:background="#50AAAC"
        android:onClick="returnToHome"
        android:text="Return to list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteItemButton" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="88dp"
        android:text="Filler Name"
        android:textSize="42dp"
        app:layout_constraintBottom_toTopOf="@+id/dateAddedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateAddedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="60dp"
        android:text="Date added: mm/dd/yyyy"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/dateExpireText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/dateExpireText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="80dp"
        android:text="Expiry date: mm/dd/yyyy"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/deleteItemButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateAddedText" />

</androidx.constraintlayout.widget.ConstraintLayout>